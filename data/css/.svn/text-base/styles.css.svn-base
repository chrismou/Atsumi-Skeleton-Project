body { font-size:12px; font-family:Helvetica,"Helvetica Neue",Arial; padding:0; margin:0; }

.header { background-color:#301E00; overflow:hidden; }
.header-inner { width:900px; margin:15px auto; }
.header h1 { color:#fff; font-family: 'Lobster', cursive; font-size:60px; margin:0; }

.content { padding:20px 0 50px; }
.content-inner { margin:0 auto; width:900px; }
.search { margin-bottom:30px; }
.search label { margin-right:5px; }
.search input { border:1px solid #ddd; color:#333; font-size:11px; padding:10px; }
.search .row { float:left; margin-right:10px; }
.search .row_distance input { width:40px; }
.search .submit input { background-color:#eee; cursor:pointer; }
.search .submit input:hover { background-color:#e3e3e3; }


ul.tweets { list-style:none; margin:0; padding:0; }
ul.tweets li { padding:12px 0; border-bottom:1px dashed #d4e4f4; }
ul.tweets span.meta { background-color:#eef2f6; padding:2px; }
ul.tweets span.meta, ul.moutwit span.meta a { font-size:10px; }
ul.tweets span.meta span.meta-sep { padding:0 4px; }
ul.tweets img.authorImg { float:left; height:40px; width:40px; overflow:hidden; margin-right:5px; }
span.clear { display:block; clear:both; }